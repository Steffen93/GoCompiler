%{
	/*Definition der mainfesten Konstanten*/
	LT, LE, EQ, NE, GT, GE, IF, THEN, ELSE, ID, NUMBER, RELOP
%}

/*regul√§re Definitionen*/
delim {\t\n}
ws {delim}+
letter [A-Za-z]
digit [0-9]
id {letter}({letter}|{digit})*
number {digit}+(\.{digit}+)?(E[+-]?{digit}+)?

%%

ws {}
if {return(IF);}
then {return(THEN);}
else {return(ELSE);}

%%


